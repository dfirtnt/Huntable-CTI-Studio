# Environment-specific configuration for AWS deployment

# Production environment variables
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database configuration (will be overridden by ECS secrets)
DATABASE_URL=postgresql+asyncpg://cti_user:password@localhost:5432/cti_scraper

# Redis configuration (will be overridden by ECS secrets)
REDIS_URL=redis://:password@localhost:6379/0

# LLM configuration
LLM_API_URL=http://ollama:11434
LLM_MODEL=mistral
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048

# OpenAI API key (will be overridden by ECS secrets)
OPENAI_API_KEY=your_openai_api_key_here

# Application configuration
APP_NAME=CTIScraper
APP_VERSION=2.0.0
DEBUG=false

# Security settings
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=*

# CORS settings
CORS_ORIGINS=*

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Content processing
MAX_CONTENT_LENGTH=10485760  # 10MB
MIN_CONTENT_LENGTH=1000

# Scraping configuration
USER_AGENT=CTIScraper/2.0
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Health check configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Auto-scaling configuration
AUTO_SCALE_ENABLED=true
MIN_INSTANCES=1
MAX_INSTANCES=10
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=30

# Cache configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Feature flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_EXPORT=true
ENABLE_API=true
